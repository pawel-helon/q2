generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ROLE {
  ADMIN
  OWNER
  ENDUSER
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  name       String?
  password   String
  role       ROLE     @default(ENDUSER)
  devices    Device[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

enum STATUS {
  ACTIVE
  INACTIVE
}

enum STATE {
  CLOSED
  OPENED
}

model Device {
  id              Int       @id @default(autoincrement())
  deviceName      String
  streetAddress   String
  city            String
  country         String
  model           String
  SIM             String
  status          STATUS
  state           STATE
  owner           User @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId         Int
}
